//---------------------------------------------------------------------------

#include <vcl.h>
#pragma hdrstop

#include "Unit4.h"
#include "Unit1.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.dfm"
TForm4 *Form4;
//---------------------------------------------------------------------------
int colsCounter = 1;
__fastcall TForm4::TForm4(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------


void __fastcall TForm4::Button1Click(TObject *Sender)
{
	Form1->StringGrid1->Cells[0][colsCounter] = Form4->Edit1->Text;
	Form1->StringGrid1->Cells[1][colsCounter] = Form4->Edit2->Text;
	Form1->StringGrid1->Cells[2][colsCounter] = Form4->Edit3->Text;
	colsCounter++;
	Form1->StringGrid1->RowCount++;
}
//---------------------------------------------------------------------------

